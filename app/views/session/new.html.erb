
<div class='login'>
  <h1 class="top-links login">Login</h1>
  <% if flash[:error] %>
  <br>
  <strong><%= flash[:error] %></strong>
  <% end %>
  <br>
  <br>

  <%= form_with url: login_path, local:true do |f| %>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email, id: 'login_email'%>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password, id: 'login_password' %>
  <br>
  <%= f.submit "Login", id: 'login_button'%>
  <% end %>
</div>
